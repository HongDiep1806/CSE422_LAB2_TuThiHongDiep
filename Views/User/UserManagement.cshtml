@model List<Lab2_TuThiHongDiep_CSE422.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<div class="mb-3" style="display:flex; justify-content:flex-end">
    <a asp-controller="User" asp-action="CreateUser" class="btn btn-success">Create New User</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td style="border-bottom:1px solid black">@user.FullName</td>
                <td style="border-bottom:1px solid black">@user.Email</td>
                <td style="border-bottom:1px solid black">@user.PhoneNumber</td>
                <td style="display:flex; flex-wrap:nowrap; border-bottom:1px solid black">
                    <a asp-controller="User" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm" style="margin:0 5px">Edit</a>
                    <form asp-controller="User" asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="id" value="@user?.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
