@using Lab2_TuThiHongDiep_CSE422.Models;
@{
    ViewData["Title"] = "Create New Device";
}

<h1>Create New Category</h1>

<form method="post" asp-action="CreateCategory">
    <!-- Category Code -->
    <div class="mb-3">
        <label for="Id" class="form-label">Category Code</label>
        <input type="text" name="Id" class="form-control" required />
    </div>
    <!-- Category Name -->
    <div class="mb-3">
        <label for="Name" class="form-label">Category Name</label>
        <input type="text" name="Name" class="form-control" required />
    </div>
    <!-- Category Description -->
    <div class="mb-3">
        <label for="Description" class="form-label">Category Description</label>
        <textarea type="text" class="form-control" id="Description" name="Description" required></textarea>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Create</button>
        <a href="/Category/CategoryManagement" class="btn btn-secondary">Cancel</a>
    </div>
</form>
