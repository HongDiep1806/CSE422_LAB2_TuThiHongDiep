@model List<Lab2_TuThiHongDiep_CSE422.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<h1>Category List</h1>
<div class="mb-3" style="display:flex; justify-content:flex-end">
    <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-success">Create New Category</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td style="border-bottom:1px solid black">@category.Id</td>
                <td style="border-bottom:1px solid black">@category.Name</td>
                <td style="border-bottom:1px solid black">@category.Description</td>
                <td style="display:flex; flex-wrap:nowrap; border-bottom:1px solid black">
                    <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-primary btn-sm" style="margin:0 5px">Edit</a>
                    <form asp-controller="Category" asp-action="DeleteCategory" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="hidden" name="id" value="@category?.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
