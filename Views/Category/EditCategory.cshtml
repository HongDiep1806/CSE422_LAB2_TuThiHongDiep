@using Lab2_TuThiHongDiep_CSE422.Models;
@model Lab2_TuThiHongDiep_CSE422.Models.Category

@{
    ViewData["Title"] = "Edit Category";
    var categories = ViewData["Categories"] as List<Category>;
    var users = ViewData["Users"] as List<User>;
}

<h1>Edit Category</h1>

<form method="post" asp-action="EditCategory">
    <!-- Category Code -->
    <div class="mb-3">
        <label for="Id" class="form-label">Category Code</label>
        <input type="text" id="Id" name="Id" class="form-control" value="@Model.Id" disabled />
    </div>
    <!-- Category Name -->
    <div class="mb-3">
        <label for="Name" class="form-label">Category Name</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
    </div>

    <!-- Category Description -->
    <div class="mb-3">
        <label for="Description" class="form-label">Category Description</label>
        <textarea type="text" class="form-control" id="Description" name="Description" required value="@Model.Description">@Model.Description</textarea>
    </div>
    <!-- Action Buttons -->
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Save Changes</button>
        <a href="/Category/CategoryManagement" class="btn btn-secondary">Cancel</a>
    </div>
</form>
